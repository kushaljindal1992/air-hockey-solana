{
  "name": "air-hockey-multiplayer",
  "version": "1.0.0",
  "description": "Real-time multiplayer air hockey game",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:wallet": "jest tests/wallet.test.js",
    "test:blockchain": "jest tests/blockchain.test.js",
    "test:multiplayer": "jest tests/multiplayer.test.js"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.29.0",
    "bs58": "^5.0.0",
    "express": "^4.18.2",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "@solana/web3.js": "^1.98.4",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "nodemon": "^3.0.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "wallet.js",
      "blockchain.js",
      "script.js",
      "server.js",
      "!node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testTimeout": 30000
  },
  "keywords": [
    "air-hockey",
    "multiplayer",
    "socket.io",
    "real-time",
    "game"
  ],
  "author": "Your Name",
  "license": "MIT"
}
