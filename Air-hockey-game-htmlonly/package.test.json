{
  "name": "air-hockey-tests",
  "version": "1.0.0",
  "description": "Test suite for Air Hockey game with Web3 integration",
  "scripts": {
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:wallet": "jest tests/wallet.test.js",
    "test:blockchain": "jest tests/blockchain.test.js",
    "test:multiplayer": "jest tests/multiplayer.test.js",
    "test:integration": "jest tests/integration.test.js"
  },
  "devDependencies": {
    "@solana/web3.js": "^1.87.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "wallet.js",
      "blockchain.js",
      "script.js",
      "!node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testTimeout": 30000
  }
}
